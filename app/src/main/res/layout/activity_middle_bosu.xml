<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="당신의 정치 성향은..."
        android:textSize="16dp"
        android:fontFamily="@font/pretendardmedium"
        android:textColor="#8E8E8E"

        />

    <LinearLayout
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:fontFamily="@font/pretendardmedium"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자유 경제 추구, "
            android:textSize="30dp"
            android:textColor="#111111"
            android:fontFamily="@font/pretendardbold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="중도보수주의!"
            android:textSize="30dp"
            android:textColor="#46A6FF"
            android:fontFamily="@font/pretendardbold"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/loating"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:src="@drawable/middlebosu"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:id="@+id/bari1"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/button_round"
        android:layout_gravity="center"
        android:backgroundTint="#F6F7FC"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp"
            android:text="     중도보수주의자인 당신은?"
            android:fontFamily="@font/pretendardmedium"
            android:textSize="16dp"
            android:textColor="#575E6B"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra ="8dp"
            android:letterSpacing="-0.009"
            android:textSize="16dp"
            android:text="     • 능력에 따라 공정한 평가가 이뤄지는 세상을 꿈꿔요.
            \n     • 정부는 기업과 개인이 자유롭게 경쟁할 수 있도록 \n        도와야 한다고 생각해요.
            \n     • 경제가 발전하면 사회도 함께 발전한다고 믿어요.
            \n     • 결과의 평등보다 과정의 평등을 중시해요.\n"
            android:fontFamily="@font/pretendardmedium"
            android:textColor="#000000"
            />
    </LinearLayout>

</LinearLayout>
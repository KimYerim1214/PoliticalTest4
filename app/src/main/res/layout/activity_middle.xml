<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="4dp"

        android:text="당신의 정치 성향은..."
        android:textSize="16dp"
        android:fontFamily="@font/pretendardmedium"
        android:textColor="#8E8E8E"

        />

    <LinearLayout
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:fontFamily="@font/pretendardmedium"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유연하게 균형을, "
            android:textSize="30dp"
            android:textColor="#111111"
            android:fontFamily="@font/pretendardbold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="중도주의!"
            android:textSize="30dp"
            android:textColor="#46A6FF"
            android:fontFamily="@font/pretendardbold"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/loating"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:src="@drawable/middle"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:id="@+id/bari1"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/button_round"
        android:layout_gravity="center"
        android:backgroundTint="#F6F7FC"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp"
            android:text="     중도주의자인 당신은?"
            android:fontFamily="@font/pretendardmedium"
            android:textSize="16dp"
            android:textColor="#575E6B"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra ="8dp"
            android:letterSpacing="-0.009"
            android:textSize="16dp"
            android:text="     • 극단적이지 않고 균형적인 세상을 꿈꿔요.
            \n     • 정부는 개인의 자유와 권리를 보장하기 위해 힘써야\n        한다고 생각해요.
            \n     • 이념과 상관없이 실용적인 정책에 관심이 많아요.
            \n     • 시장경제 발전과 사회 안정망 구축 모두 중요하다고\n        생각해요.
            \n     • 상황과 문제에 따라 유연하게 정당과 정책을 선택하\n        는 편이에요.\n"
            android:fontFamily="@font/pretendardmedium"
            android:textColor="#000000"
            />
    </LinearLayout>

</LinearLayout>